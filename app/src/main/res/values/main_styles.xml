<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Component styles. -->
    <style name="mainRectangles" parent="extremeElevation">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="mainRectanglesWithoutElevation">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="mainRectanglesWithoutPrimaryColor" parent="extremeElevation">
        <item name="android:background">@drawable/rectangle_primary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:padding">@dimen/mediumMarginOrPadding</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Mostly for the login signup page -->
    <style name="editText_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_margin">@dimen/mediumMarginOrPadding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/mediumMarginOrPadding</item>
    </style>

    <style name="button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_margin">@dimen/mediumMarginOrPadding</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/mediumMarginOrPadding</item>
    </style>

    <style name="textview_style_new">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:padding">@dimen/mediumMarginOrPadding</item>
    </style>

    <style name="background_gradient">
        <item name="android:background">@drawable/gradient_background</item>

    </style>
    <!-- Mostly for the login signup page -->

    <!-- Component styles. ***-->

</resources>